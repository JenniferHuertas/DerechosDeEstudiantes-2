    .row.justify-content-md-center
      .col-md-auto
        =image_tag("polygon-center.svg",  :class => "polygon-center-right")
        .row
          .col-md-6
            %hr-title
            .text-complain-p
              =t('.complain.description')
          .col-md-6.right
            =image_tag("complain.svg",  :class => "icono")

    .row.justify-content-md-center
      .col-md-8
        =link_to t('.complain.button_ok'), new_complain_path, class: "btn btn-outline-primary-yellow"
