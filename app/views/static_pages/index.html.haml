    %div.margin-top-big
    .row.justify-content-md-center
      .col-md-8.center
        .text-know-title.max-parent.center
          =t('.title_section_two')
        .text-subsection-know-p.max-parent.center
          =t('.description_section_two')

    .row.justify-content-md-center.section_main
      .col-md-10
        .label-solid
          .row.padding-section-main
            .col-md-6
              =image_tag("section_1.svg",  :class => "icono")
            .col-md-6.space-right
              .text-title
                =t('.card_one_title')
              %hr
              .text-p
                %p
