          .row.justify-content-end
            .col-md-6
              .btn-shape
                .subtext-title
                  =t('.shared')
                  .space=image_tag("facebook.svg")
                  =image_tag("twitter.svg")


    .row.justify-content-md-center.section_main
      .col-md-10
        .label-solid
          .row.padding-section-main
            .col-md-6.space-left
              .text-title
                =t('.card_two_title')
              %hr
              .text-p
                %p
                  =t('.card_two_description_html')
            .col-md-6
              =image_tag("section_2.svg",  :class => "icono")

          .row.justify-content-end
            .col-md-6.left
              .btn-shape-left
                .subtext-title
                  =t('.shared')
                  .space=image_tag("facebook.svg")
                  =image_tag("twitter.svg")
            .col-md-6

%footer-landing.sticky-footer.max-parent
  =render "shared/footer"

:javascript
  $("#search").keyup(function (e) {
    if ($(".unclic")[0]){
      root_path="#{root_path}"
      $.ajax({ type: "GET", url: root_path+"?search="+$('#search').val(), success: function(result){
      }});
    }else{
      $('.dialog-error').html("#{escape_javascript(render 'shared/dialog_error')}");
      $(".alert").delay(2000).slideUp(200, function() {
        if ($.isFunction($(this).alert)) {
          $(this).alert('close');
        }
      });
    }
  });

  $("#search").click(function (e) {
   if (!$(".unclic")[0]){
      $('.dialog-error').html("#{escape_javascript(render 'shared/dialog_error')}");
      $(".alert").delay(2000).slideUp(200, function() {
        if ($.isFunction($(this).alert)) {
          $(this).alert('close');
        }
      });
    }
  });