%nav.navbar.navbar-expand-lg.static-top
  .container
    =link_to root_path, class: "navbar-brand" do
      =image_tag("logo.svg", class: "logo")
    %button.navbar-toggler{"aria-controls" => "navbarResponsive", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarResponsive", "data-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    #navbarResponsive.collapse.navbar-collapse
      %ul.navbar-nav.ml-auto
        %li.nav-item
          =link_to "Hacer una consulta", static_pages_about_us_path, class: "btn btn-outline-primary", "data-toggle": "modal", "data-target": "#questionModal"
        %li.nav-item
          =link_to "Sobre nosotros", static_pages_about_us_path, class: "btn btn-outline-primary"

.modal_form
  =render "shared/modal_form"

/modal thanks
#sendModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "sendModalLabel", :role => "dialog", :tabindex => "-2"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-body
        .row
          .col-md-4
            =image_tag("mail.svg", class: "logo")
          .col-md-8.center
            %p.send-title
              =t('.title_send')
            %p
              =t('.message_send')
            %a.threedbutton{"aria-label" => "Close", "data-dismiss" => "modal"}
              =t('.close')
