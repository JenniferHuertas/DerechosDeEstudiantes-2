    .modal-content
      .modal-body
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        =image_tag("paloma.svg", class: "logo")
        %p.text-p=t('.title_html')

        .row.justify-content-md-center
          .input-group
            %span
              .text-input=t('.depto')
            %input.form-control{:placeholder => "", :type => "text"}/
          .input-group
            %span
              .text-input=t('.institution')
            =select(:institution, :institution_id, @json_establecimientos['establecimientos'].map {|v| [ v['nombre'], v['id'] ] }, class: "form-control")
