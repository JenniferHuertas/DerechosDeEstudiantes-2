/ Modal question
#questionModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "questionModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-lg{:role => "document"}
    .modal-content
      .modal-body
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        =image_tag("paloma.svg", class: "logo")
        %p.text-p=t('.title_html')
        = form_for :question, :url => {:controller => :questions, action: :create} do |f|
          .row.justify-content-md-center
            .input-group
              %span
                .text-input=t('.depto')
              =f.select(:location, @json_locations.collect {|v| [ v['nombre'], v['nombre'] ] }, class: "form-control")
            .input-group
              %span
                .text-input=t('.institution')
              =f.select(:institution, @json_institutions['establecimientos'].collect {|v| [ v['nombre'], v['nombre'] ] }, class: "form-control")
            .input-group
              %span
                .text-input=t('.grade')
              =f.number_field "grade", id: "grade", :class => "form-control", :min=>"1",  :max=>"9", :value => 1
            .input-group
              %span
              .text-input=t('.question')
              =f.text_area "message", id: "message", :class => "form-control"
            .complain-btn
              %a.threedbutton{id: "send_question", :submit => "form"}
                =t('.send')

:javascript
  $('#send_question').click(function() {
    if($('#message').val() === ""){
      toastr.error('Por favor dejanos una pregunta', 'Error!')
    }
    else{
      $( "form" ).first().submit();
      $('#questionModal').modal('hide');
      $('#sendModal').modal('show');
    }
  });